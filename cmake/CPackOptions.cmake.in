set(CPACK_PACKAGING_INSTALL_PREFIX "/")

set(CPACK_PACKAGE_CONTACT "Timothy Werquin")
set(CPACK_STRIP_FILES ON)

set(CPACK_COMPONENTS_ALL "@CPACK_COMPONENTS_ALL@")
set(CPACK_DEB_COMPONENT_INSTALL ON)

foreach(CPACK_COMP IN LISTS CPACK_COMPONENTS_ALL)
  string(TOUPPER "${CPACK_COMP}" COMP_NAME)
  set(CPACK_DEBIAN_${COMP_NAME}_FILE_NAME "${CPACK_COMP}.ipk")
endforeach()

set(CPACK_DEBIAN_ARCHIVE_TYPE "gnutar")
set(CPACK_DEBIAN_PACKAGE_ARCHITECTURE "rmall")

set(CPACK_DEBIAN_PACKAGE_DEPENDS "xochitl")
set(CPACK_DEBIAN_PACKAGE_PROVIDES "display, rm2fb-client")
set(CPACK_DEBIAN_PACKAGE_CONFLICTS "display, rm2fb-client, rm2fb")
